<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:gravity="center"
	xmlns:app="http://schemas.android.com/apk/res-auto">
	<androidx.cardview.widget.CardView
		android:id="@+id/mc_bg"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:cardCornerRadius="@dimen/frame_four_distance"
		android:layout_margin="@dimen/frame_eight_distance"
		app:cardElevation="@dimen/frame_four_distance"
		android:foreground="?selectableItemBackground">
		<androidx.appcompat.widget.LinearLayoutCompat
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:gravity="center">
			<androidx.appcompat.widget.AppCompatTextView
				android:id="@+id/mc_name"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/frame_eight_distance"
				android:layout_marginLeft="@dimen/frame_eight_distance"
				android:layout_marginRight="@dimen/frame_eight_distance"
				android:lines="3"
				android:ellipsize="end"
				android:gravity="center"
				android:textSize="@dimen/frame_text_smaller_size"
				android:textColor="@color/text_white_color"
				android:textStyle="bold"
				/>
			<androidx.appcompat.widget.AppCompatTextView
				android:id="@+id/mc_update"
				android:layout_marginBottom="@dimen/frame_eight_distance"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:textSize="@dimen/frame_text_smallst_size"
				android:textColor="@color/text_white_color"
				android:textStyle="bold"
				/>
		</androidx.appcompat.widget.LinearLayoutCompat>
	</androidx.cardview.widget.CardView>
</androidx.appcompat.widget.LinearLayoutCompat>