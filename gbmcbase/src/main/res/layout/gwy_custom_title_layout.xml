<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <TextView 
        android:id="@+id/gwy_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_white_color"
        android:textSize="@dimen/frame_text_middle_size"
        android:gravity="center"
        android:layout_centerInParent="true"
        />
	<LinearLayout 
	    android:id="@+id/gwy_search_layout"
	    android:layout_width="@dimen/frame_160_distance"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:gravity="center"
	    android:layout_alignParentLeft="true"
	    android:layout_centerVertical="true"
	    android:background="@drawable/gwy_search_input_blue_bg"
	    android:padding="@dimen/frame_four_distance"
	    >
	    <EditText 
	        android:id="@+id/gwy_search_et"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:textColor="@color/text_white_color"
	        android:textCursorDrawable="@drawable/color_cursor"
	        android:textSize="@dimen/frame_text_small_size"
	        android:singleLine="true"
	        android:background="@android:color/transparent"
	        android:paddingLeft="@dimen/frame_eight_distance"
	        android:paddingRight="@dimen/frame_eight_distance"
	        />
	    <ImageView 
            android:id="@+id/gwy_search_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_search"
            />
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:gravity="center"
	    android:layout_alignParentRight="true"
	    android:layout_centerVertical="true"
	    >
	    <TextView 
	        android:id="@+id/gwy_tj_tv"
	        android:layout_width="wrap_content"
	        android:layout_height="@dimen/frame_photo_icon_size"
	        android:text="统计"
	        android:drawableLeft="@mipmap/gwy_tj"
	        android:textColor="@color/text_white_color"
	        android:textSize="@dimen/frame_text_small_size"
	        android:gravity="center_vertical"
	        android:background="@drawable/gwy_button_bg_selector"
	        android:layout_marginRight="@dimen/frame_eight_distance"
	        android:paddingLeft="@dimen/frame_eight_distance"
	        android:paddingRight="@dimen/frame_eight_distance"
	        />
	    <ImageView 
	        android:id="@+id/gwy_pre_iv"
	        android:src="@mipmap/gwy_left"
	        android:layout_width="@dimen/frame_photo_icon_size"
	        android:layout_height="@dimen/frame_photo_icon_size"
	        android:scaleType="fitCenter"
	        android:background="@drawable/gwy_button_bg_selector"
	        android:layout_marginRight="@dimen/frame_eight_distance"
	        />
	    <ImageView 
	        android:id="@+id/gwy_next_iv"
	        android:src="@mipmap/gwy_right"
	        android:layout_width="@dimen/frame_photo_icon_size"
	        android:layout_height="@dimen/frame_photo_icon_size"
	        android:scaleType="fitCenter"
	        android:background="@drawable/gwy_button_bg_selector"
	        android:layout_marginRight="@dimen/frame_eight_distance"
	        />
	</LinearLayout>
</RelativeLayout>
