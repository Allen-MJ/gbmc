<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wa_frame_title_bar_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:background="@color/gwy_title_bar_color">
    <RelativeLayout 
        android:id="@+id/wa_frame_title_barconent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView 
	        android:id="@+id/wa_frame_title_tv"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/app_name"
	        android:textSize="@dimen/frame_text_middle_size"
	        android:layout_marginStart="@dimen/frame_60_distance"
	        android:layout_marginEnd="@dimen/frame_60_distance"
	        android:layout_centerVertical="true"
	        android:textColor="@color/text_white_color"
	        android:gravity="center"
	        />
        <LinearLayout 
            android:layout_width="@dimen/frame_60_distance"
            android:layout_height="@dimen/frame_60_distance"
            android:orientation="vertical"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            >
            <ImageView 
		        android:id="@+id/wa_frame_left_bt"
		        android:layout_width="@dimen/frame_60_distance"
		        android:layout_height="@dimen/frame_60_distance"
		        android:background="@drawable/icon_bg_selecor"
		        android:src="@mipmap/gwy_back"
		        android:scaleType="center"
		        android:contentDescription="@string/app_name"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/frame_60_distance"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            >
            <TextView 
		        android:id="@+id/wa_frame_right1_bt"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:background="@drawable/icon_bg_selecor"
		        android:textColor="@color/gwy_psw_button_text_color_selector"
		        android:textSize="@dimen/frame_text_small_size"
		        android:padding="@dimen/frame_edge_distance"
		        android:text="清空数据"
		        android:gravity="center"
		        android:visibility="gone"/>
            <TextView 
		        android:id="@+id/wa_frame_right_bt"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:drawableRight="@mipmap/gwy_set"
		        android:background="@drawable/icon_bg_selecor"
		        android:textColor="@color/text_white_color"
		        android:textSize="@dimen/frame_text_small_size"
		        android:gravity="center"
		        android:padding="@dimen/frame_edge_distance"/>
        </LinearLayout>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/wa_frame_add_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </FrameLayout>
</LinearLayout>
