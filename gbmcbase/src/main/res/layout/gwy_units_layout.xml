<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView 
            android:id="@+id/units_name_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black_color"
            android:textSize="@dimen/frame_text_normal_size"
            android:gravity="start|center_vertical"
            android:paddingTop="@dimen/frame_edge_distance"
            android:paddingLeft="@dimen/frame_edge_distance"
            android:paddingRight="@dimen/frame_edge_distance"
            android:paddingBottom="@dimen/frame_eight_distance"
            />
        <LinearLayout 
            android:layout_width="@dimen/frame_160_distance"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginRight="@dimen/frame_edge_distance"
            android:layout_marginTop="@dimen/frame_edge_distance"
            android:layout_marginBottom="@dimen/frame_edge_distance"
            android:background="@drawable/gwy_search_input_bg"
            android:padding="@dimen/frame_four_distance"
            >
	        <EditText 
	            android:id="@+id/search_et"
	            android:layout_width="0dp"
	            android:layout_weight="1"
	            android:layout_height="wrap_content"
	            android:textColor="@color/text_black_color"
	            android:textSize="@dimen/frame_text_small_size"
	            android:paddingLeft="@dimen/frame_eight_distance"
		        android:paddingRight="@dimen/frame_eight_distance"
	            android:singleLine="true"
	            android:background="@android:color/transparent"
	            />
	        <ImageView 
	            android:id="@+id/search_bt"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@android:drawable/ic_menu_search"
	            />
        </LinearLayout>
    </LinearLayout>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/frame_one_distance"
	    android:background="@color/text_red_color"
	    />
	<ListView 
	    android:id="@+id/units_list"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    >
	</ListView>
</LinearLayout>
