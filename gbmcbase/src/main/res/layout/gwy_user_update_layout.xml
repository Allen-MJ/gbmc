<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/frame_edge_distance" >
    <EditText 
        android:id="@+id/admin_psw_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_black_color"
        android:textSize="@dimen/frame_text_smaller_size"
        android:hint="请输入6位数字原密码"
        android:padding="@dimen/frame_edge_distance"
        android:background="@drawable/gwy_psw_input_bg"
        android:inputType="numberPassword"
        android:maxLength="6"
        android:singleLine="true"
        />
    <EditText 
        android:id="@+id/new_psw_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_black_color"
        android:textSize="@dimen/frame_text_smaller_size"
        android:hint="请输入6位数字新密码"
        android:padding="@dimen/frame_edge_distance"
        android:layout_marginTop="@dimen/frame_edge_distance"
        android:background="@drawable/gwy_psw_input_bg"
        android:inputType="numberPassword"
        android:maxLength="6"
        android:singleLine="true"
        />
    <EditText 
        android:id="@+id/agin_psw_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_black_color"
        android:textSize="@dimen/frame_text_smaller_size"
        android:hint="再次输入新密码"
        android:padding="@dimen/frame_edge_distance"
        android:layout_marginTop="@dimen/frame_edge_distance"
        android:background="@drawable/gwy_psw_input_bg"
        android:inputType="numberPassword"
        android:maxLength="6"
        android:singleLine="true"
        />
</LinearLayout>
