<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/lay" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/tree_lay"
        android:gravity="center"
        android:padding="@dimen/frame_eight_distance"
        >
        <ImageView 
            android:id="@+id/tree_icon"
            android:layout_width="@dimen/frame_20_distance"
            android:layout_height="@dimen/frame_20_distance"
            android:scaleType="fitCenter"
            />
        <TextView 
            android:id="@+id/tree_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_gray_color"
            android:textSize="@dimen/frame_text_small_size"
            android:padding="@dimen/frame_eight_distance"
            />
    </LinearLayout>

</LinearLayout>
