<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/frame_eight_distance">
    <LinearLayout 
        android:id="@+id/units_mc_item"
        android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
        >
	    <TextView 
	        android:id="@+id/units_mc_item_name"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textColor="@color/text_black_color"
	        android:textSize="@dimen/frame_text_smaller_size"
	        android:lines="3"
	        android:ellipsize="end"
	        android:gravity="center"
	        />
		<TextView 
		    android:id="@+id/units_mc_item_date"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textColor="@color/text_black_color"
	        android:textSize="@dimen/frame_text_smallst_size"
	        android:gravity="center"
	        android:layout_marginBottom="@dimen/frame_eight_distance"
		    />
    </LinearLayout>
</LinearLayout>
